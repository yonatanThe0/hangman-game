<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Corner Radius -->
    <corners android:radius="8dp" />

    <!-- Background Color -->
    <solid android:color="#FFFFFF" />

    <!-- Optional: Border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Optional: Padding -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>